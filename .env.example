# ============================================================================
# SWINGAI ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================================================

# ============================================================================
# APPLICATION
# ============================================================================
APP_ENV=production
APP_NAME=SwingAI
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
DEBUG=False

# ============================================================================
# FRONTEND
# ============================================================================
FRONTEND_URL=https://swingai.vercel.app

# ============================================================================
# SUPABASE
# ============================================================================
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=eyJxxxxxxxxxxx
SUPABASE_SERVICE_KEY=eyJxxxxxxxxxxx

# ============================================================================
# RAZORPAY
# ============================================================================
RAZORPAY_KEY_ID=rzp_live_xxxxx
RAZORPAY_KEY_SECRET=xxxxx

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
ENABLE_REDIS=False

# ============================================================================
# BROKER APIS (Optional - users provide their own)
# ============================================================================
# Zerodha
ZERODHA_API_KEY=
ZERODHA_API_SECRET=

# Angel One
ANGEL_ONE_API_KEY=
ANGEL_ONE_CLIENT_ID=

# Upstox
UPSTOX_API_KEY=
UPSTOX_API_SECRET=

# ============================================================================
# ML INFERENCE
# ============================================================================
ML_INFERENCE_URL=https://your-model.modal.run
ENHANCED_ML_INFERENCE_URL=
ML_MODEL_PATH=ml/models

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
SENTRY_DSN=
LOG_LEVEL=INFO

# ============================================================================
# TELEGRAM ALERTS (Optional)
# ============================================================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# SCHEDULER
# ============================================================================
ENABLE_SCHEDULER=False

# ============================================================================
# ENHANCED AI PIPELINE
# ============================================================================
ENABLE_ENHANCED_AI=False

# ============================================================================
# GRAFANA (Optional - for monitoring)
# ============================================================================
GRAFANA_PASSWORD=admin
